{
  "private": true,
  "packageManager": "pnpm@10.12.3",
  "scripts": {
    "build": "tsc -b",
    "watch": "pnpm run \"/^watch:.*/\"",
    "watch:base": "tsc -b -w",
    "watch:vscode": "pnpm -F mpx run watch",
    "test": "vitest",
    "lint": "eslint --cache .",
    "format": "prettier --write --cache .",
    "clean": "rimraf -g .eslintcache \"**/*.tsbuildinfo\" && pnpm clean:out",
    "clean:out": "rimraf -g \"packages/*/out\" \"vscode/out\" \"vscode/dist\"",
    "version:patch": "pnpm build && lerna version patch --yes --force-publish",
    "publish:npm": "lerna publish from-package --yes",
    "postinstall": "simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "tsx scripts/verify-commit.ts"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write --cache"
    ],
    "*.ts": [
      "eslint --fix --cache",
      "prettier --parser=typescript --write --cache"
    ]
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "catalog:",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "lerna": "^8.2.2",
    "lint-staged": "^15.2.0",
    "picocolors": "^1.1.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.9.0",
    "tsx": "^4.19.3",
    "typescript": "catalog:"
  }
}
